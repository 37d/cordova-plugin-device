<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
id="org.apache.cordova.core">
    version="0.1.0">
    <name>Device</name>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/cordova/plugins">
            <plugin name="Device" value="org.apache.cordova.core.Device"/>
        </config-file>

        <source-file src="src/android/Device.java" target-dir="org/apache/cordova/core" />
    </platform>

    <!-- wp7 -->
    <platform name="wp7">
        <config-file target="config.xml" parent="/*">
            <feature name="Device">
                <param name="wp-package" value="Device"/>
            </feature>
        </config-file>

        <source-file src="src/wp7/Device.cs" /> 
    </platform>

</plugin>
